@model List<Category> 

<div class="list-group">
  
    @*<a asp-controller="Shop" asp-action="List" asp-route-category="" class="list-group-item list-group-item-action">Tüm Kategoriler</a>*@
   
    
    <a href="/products" class="list-group-item list-group-item-action">Tüm Kategoriler</a>


    @*Kategori bilgileri / manuel
        <a asp-controller="Product" asp-action="List" class="list-group-item list-group-item-action">Telefon</a>
