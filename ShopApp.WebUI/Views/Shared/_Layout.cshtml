<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShopApp</title>

    <link href="/modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/style.css" />


    @*Startup dosyasında "node_modules"ı "modules" olarak tanımladık.*@

</head>
<body>


    @await Html.PartialAsync("_navbar")


    @*------------------------------------------
            1) @await Html.PartialAsync("_header") -> her syfada gelecek
            2) <partial name="_header">
            3) @RenderSection("Header", false) -> her syfda gelmeyecek.
        ------------------------------------------*@


    <main class="my-3">
        <div class="container">
            @RenderBody()

            @*---------------------------------------------
                @if (IsSectionDefined("Categories"))
                {
                    <div class="row">
                        <div class="col-md-3">
                            @RenderSection("Categories", false)
                        </div>
                        <div class="col-md-9">
                            @RenderBody()
                        </div>
                    </div>
                }
                else
                {
                    <div class="row">
                        <div class="col-md-12">
                            @RenderBody()
                        </div>
                    </div>
                }----------------------------------------------*@

        </div>
    </main>

    <footer class="py-5 mb-0 bg-dark text-white text-center">
        Shop App | 2021
    </footer>


    @*<script src="modules/bootstrap/dist/js/bootstrap.min.js"></script>*@



    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/adb76169cc.js" crossorigin="anonymous"></script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>

    @RenderSection("Scripts", false)




 </body>
</html>
