@model ProductModel

<h1 class="h3"> Create Product </h1>
<hr>

<div class="row">
    <div class="col-md-8" >
        <form asp-controller="Admin" asp-action="CreateProduct" method="POST">

            @*model kullanmadan önce--------------------------------------------------
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label"> Name </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="Name" name="Name">
                    </div>
                </div>
            *@
            @*model kullandıktan sonra------------------------------------------------*@

            <div class="form-group row  mb-2">
                <label asp-for="Name" class="col-sm-2 col-form-label"> </label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Name"> @* model içinde Name old. için Id ve Name'i kendi otomatik çıkaracak.'*@
                </div>
            </div>
            @*------------------------------------------------------------------------*@


            <div class="form-group row  mb-2">
                @*<label class="col-sm-2 col-form-label"> URL </label>*@
                <label asp-for="Url" class="col-sm-2 col-form-label"> </label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Url">
                </div>
            </div>

            <div class="form-group row  mb-2">
                @*<label class="col-sm-2 col-form-label"> Description </label>*@
                <label asp-for="Description" class="col-sm-2 col-form-label"> </label>
                <div class="col-sm-10">
                    <textarea class="form-control" asp-for="Description"></textarea>
                </div>
            </div>

            <div class="form-group row  mb-2">
                <label asp-for="Cost" class="col-sm-2 col-form-label">  </label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Cost">
                </div>
            </div>

            <div class="form-group row mb-2">
                <label asp-for="ImageUrl" class="col-sm-2 col-form-label"> </label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="ImageUrl">
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Save Product</button>
                </div>
            </div>
        </form>
    </div>
</div>
